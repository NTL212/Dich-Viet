  "shortcuts": [
    {
      "name": "New Translation",
      "short_name": "Translate",
      "description": "Start a new document translation",
      "url": "/ui?action=new",
      "icons": [{ "src": "/ui/icons/translate-96.png", "sizes": "96x96" }]
    },
    {
      "name": "Batch Upload",
      "short_name": "Batch",
      "description": "Upload multiple documents",
      "url": "/ui/batch-upload.html",
      "icons": [{ "src": "/ui/icons/batch-96.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "share_target": {
    "action": "/ui/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": [".pdf", ".docx", ".txt", ".md", ".tex", "application/pdf", "application/vnd.openxmlformats-officedocument.wordprocessingml.document", "text/plain", "text/markdown"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/ui?source=file-handler",
      "accept": {
        "application/pdf": [".pdf"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/x-tex": [".tex"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+aipublisher",
      "url": "/ui?protocol=%s"
    }
  ]
}
