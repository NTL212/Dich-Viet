# ===============================================================
# AI-PUBLISHER-PRO Configuration for PrismyDoc Integration
# ===============================================================

# Server
HOST=0.0.0.0
PORT=3001
DEBUG=false

# CORS - Allow PrismyDoc
CORS_ORIGINS=http://localhost:3000,https://prismydoc.com

# AI Providers (uu tien Claude)
DEFAULT_PROVIDER=claude
ANTHROPIC_API_KEY=your_claude_api_key
OPENAI_API_KEY=your_openai_api_key_optional

# Translation Settings
DEFAULT_SOURCE_LANG=en
DEFAULT_TARGET_LANG=vi
PRESERVE_LAYOUT=true
PRESERVE_FORMULAS=true

# Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
MAX_FILE_SIZE_MB=50

# Translation Memory
TM_ENABLED=true
TM_MIN_SIMILARITY=0.85
TM_DATABASE=./data/translation_memory.db

# Glossary
GLOSSARY_ENABLED=true
GLOSSARY_DIR=./glossary

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/prismydoc.log
